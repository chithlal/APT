<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:minHeight="@dimen/card_min_height"
    android:id="@+id/card_fact"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/card_cornner_rad">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/card_title"
        android:id="@+id/tv_card_title"
        android:textColor="@color/colorTitle"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/card_title_margin_top"
        android:layout_marginStart="@dimen/card_title_margin_start"
        android:textSize="@dimen/card_title_size"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/colorAccent"
            android:layout_margin="@dimen/line_marin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/margin_description_layout"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_card_desc"
                tools:text="@string/card_description"
                android:layout_marginTop="@dimen/card_title_margin_top"
                android:layout_marginStart="@dimen/card_title_margin_start"
                android:textSize="@dimen/card_title_size"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/iv_cardImage"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/image_height"
                android:src="@android:drawable/ic_menu_gallery"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>